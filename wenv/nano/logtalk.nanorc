## Here is an example for Logtalk.
##
syntax "logtalk" "\.lgt$"

color brightblack start="^[[:space:]]*:- (object|category|protocol)\(" end="\)\."
color brightblack "^[[:space:]]*:- end_(object|category|protocol)\."

color red "::"

color cyan "[A-Z_][0-9A-Za-z_]*"

color brightyellow ""[^"]*""
color brightyellow "'[^']*'"

color blue "%.*"
color blue start="/\*" end="\*/"
