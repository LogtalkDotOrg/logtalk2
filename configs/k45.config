on_error(7, 0, Pred) :-
	predicate(Pred, _, public, _, _, _) ->
		fail
		;
		write('unknown predicate: '),
		writeq(Pred),
		abort.



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
%  ISO Prolog Standard predicates that we must define because they are
%  not built-in
%
%  add a clause for lgt_iso_predicate/1 declaring each ISO predicate that
%  we must define; there must be at least one clause for this predicate
%  whose call should fail if we don't define any ISO predicates
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


initialization(Goal) :-
	call(Goal).


% '$lgt_iso_predicate'(?callable).

'$lgt_iso_predicate'(catch(_, _, _)).
'$lgt_iso_predicate'(iso_throw(_)).
'$lgt_iso_predicate'(nl(_)).
'$lgt_iso_predicate'(open(_, _, _)).
'$lgt_iso_predicate'(read_term(_, _, _)).
'$lgt_iso_predicate'(write_canonical(_, _)).
'$lgt_iso_predicate'(write_term(_, _, _)).


catch(Goal, Catcher, Recovery) :-
	catch(catcher(Error,Catcher), Goal),
	(var(Error) -> true
		;
		Error = 999 -> call(Recovery)).


nl(Stream) :-
	telling(Current),
	tell(Stream),
	nl,
	tell(Current).


open(File, read, File) :-
    seeing(Current),
    see(File),
    see(Current).

open(File, write, File) :-
    telling(Current),
    tell(File),
    tell(Current).


read_term(Stream, Term, [singletons([])]) :-
	!,
	seeing(Current),
	see(Stream),
	read(Term),
	see(Current).

read_term(Stream, Term, _) :-
	seeing(Current),
	see(Stream),
	read(Term),
	see(Current).


write_canonical(Stream, Term) :-
	writeq(Stream, Term).


write_term(Stream, Term, [quoted(true)]) :-
	!,
	telling(Current),
	tell(Stream),
	writeq(Term),
	tell(Current).

write_term(Stream, Term, _) :-
	telling(Current),
	tell(Stream),
	write(Term),
	tell(Current).


iso_throw(Catcher):-
	throw(catcher(999,Catcher)).



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
%  predicate properties
%
%  this predicate must return at least static, dynamic, and built_in 
%  properties for an existing predicate
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


% '$lgt_predicate_property'(+callable, ?predicate_property)

'$lgt_predicate_property'(Pred, built_in) :-
	predicate(Pred, _, builtin, _, _, _).

'$lgt_predicate_property'(Pred, static) :-
	predicate(Pred, _, compiled, _, _, _).

'$lgt_predicate_property'(Pred, dynamic) :-
	predicate(Pred, _, public, _, _, _).



