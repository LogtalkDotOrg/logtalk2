% '$lgt_file_exists'(+atom)
%
% see if a file exist in the current directory

:- java_predicates('java.io.File',
	[fileCreate = 'File'(string),
	 fileCanRead = canRead,
	 fileLastModified = lastModified]).

'$lgt_file_exists'(Path) :-
	fileCreate(Path, File),
	fileCanRead(File).


