%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
%  ISO Prolog Standard predicates that we must define because they are
%  not built-in
%
%  add a clause for lgt_iso_predicate/1 declaring each ISO predicate that
%  we must define; there must be at least one clause for this predicate
%  whose call should fail if we don't define any ISO predicates
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


initialization(Goal) :-
	call(Goal).


% '$lgt_iso_predicate'(?callable).
%
% table of definition for missing ISO predicates

'$lgt_iso_predicate'(atom_concat(_, _, _)).
'$lgt_iso_predicate'(atom_length(_, _)).
'$lgt_iso_predicate'(read_term(_, _, _)).
'$lgt_iso_predicate'(write_canonical(_, _)).
'$lgt_iso_predicate'(write_term(_, _, _)).


atom_concat(Atom1, Atom2, Atom) :-
	atom_codes(Atom1, Codes1),
	atom_codes(Atom2, Codes2),
	'$lgt_append'(Codes1, Codes2, Codes),
	atom_codes(Atom, Codes).


atom_length(Atom, _) :-
	var(Atom),
	throw(instantiation_error).

atom_length(Atom, _) :-
	\+ atom(Atom),
	throw(type_error(atom, Atom)).

atom_length(_, Length) :-
	nonvar(Length),
	\+ integer(Length),
	throw(type_error(integer, Length)).

atom_length(_, Length) :-
	integer(Length),
	Length < 0,
	throw(domain_error(not_less_than_zero, Length)).

atom_length(Atom, Length) :-
	atom_codes(Atom, Codes),
	atom_length_aux(Codes, 0, Length).


atom_length_aux([], Length, Length).
atom_length_aux([_| Tail], Acc, Length) :-
	Acc2 is Acc + 1,
	atom_length_aux(Tail, Acc2, Length).


read_term(Stream, Term, [singletons([])]) :-
	!,
	read(Stream, Term).

read_term(Stream, Term, _) :-
	read(Stream, Term).


write_canonical(Stream, Term) :-
	writeq(Stream, Term).


write_term(Stream, Term, _) :-
	write(Stream, Term).



