% '$lgt_predicate_property'(+callable, ?predicate_property)

'$lgt_predicate_property'(Pred, (dynamic)) :-
	predicate_property(Pred, (asserted)).

'$lgt_predicate_property'(Pred, Prop) :-
	predicate_property(Pred, Prop).



